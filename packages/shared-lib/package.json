{
  "name": "@eviteri/shared-mfe-lib",
  "author": "Eloy Viteri",
  "description": "Shared library for MicroFrontEnds with Module Federation ",
  "version": "1.0.0",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.4.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.22",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "axios": "^0.25.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.14",
    "react-router-dom": "^5.2.0",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "rm -rf ./dist && mkdir dist",
    "build": "npm run prebuild && npm run build:compile && npm run build:copyAssets",
    "build:compile": "tsc --build tsconfig.prod.json",
    "build:copyAssets": "cp -r ./src/assets ./dist/ && cp ./package.json ./dist/ && cp ./README.md ./dist/",
    "dist": "cd dist && npm publish",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.3.3",
    "webpack-cli": "^4.9.2"
  }
}